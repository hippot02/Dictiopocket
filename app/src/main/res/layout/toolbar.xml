<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/blueperso"
    >
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:layout_alignParentTop="true">
        
        <ImageView
            android:layout_width="15pt"
            android:layout_height="15pt"
            android:src="@drawable/baseline_home_24"
            android:layout_centerVertical="true"
            android:id="@+id/home_icon"
            android:layout_alignParentTop="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:text="@string/app_name"
            android:fontFamily="@font/deliciousfont"
            android:layout_toEndOf="@id/home_icon"
            android:layout_marginLeft="5dp"
            android:textColor="@android:color/white"
            android:textSize="25sp"/>

        <Button
            android:layout_width="50pt"
            android:layout_height="wrap_content"
            android:id="@+id/tbDevinPaysButton"
            android:onClick="onClick"
            android:text="Devin'Pays"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:textSize="10dp"/>

        <Button
            android:layout_width="50pt"
            android:layout_height="wrap_content"
            android:id="@+id/tbQuizzButton"
            android:onClick="onClick"
            android:text="Quizz"
            android:layout_toLeftOf="@+id/tbDevinPaysButton"
            android:layout_alignParentTop="true"
            android:layout_marginRight="2pt"
            android:textSize="10dp"/>


    </RelativeLayout>

</RelativeLayout>